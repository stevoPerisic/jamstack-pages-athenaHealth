---
layout: base.njk
title: Provider Details
permalink: /provider/{{ id }}/
---
{% block content %}
<h1>Provider Details</h1>

<div class="container">
    <div class="row">
      <div class="col-md-4">
        <img src="{{ provider.picture }}" alt="{{ provider.firstname }} {{ provider.lastname }}">
        <h3>{{ provider.firstname }} {{ provider.lastname }}</h3>
        <p>{{ provider.providertype }}</p>
        <p>{{ provider.bio }}</p>
      </div>
    </div>
</div>

{% endblock %}
